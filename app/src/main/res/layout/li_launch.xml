<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Launch date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp" android:id="@+id/textView3" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/li_mission_patch_small" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Mission name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp" android:id="@+id/textView2" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/li_mission_patch_small" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Flight number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/li_mission_patch_small"
            android:layout_marginStart="4dp" android:id="@+id/textView5" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/li_mission_patch_small"/>
    <ImageView
            android:layout_width="72dp"
            android:layout_height="68dp" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/li_mission_patch_small"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_mission_patch_small"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="207dp"
            android:layout_height="17dp"
            android:id="@+id/li_mission_name"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
    />
    <TextView
            android:layout_width="214dp"
            android:layout_height="14dp"
            android:id="@+id/li_flight_number"
            app:layout_constraintTop_toTopOf="@+id/textView5" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/li_mission_name" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="223dp"
            android:layout_height="16dp"
            android:id="@+id/li_launch_date"
            app:layout_constraintTop_toTopOf="@+id/textView3" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/li_mission_name" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>